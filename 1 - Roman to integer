class Solution {
    //compare the two consecutive numerals and decide whether to add or subtract.

    public
        int CharToNum(char a){ 
        //assign value to each character of string(Roman numeral).
            switch (a) {
                case 'I': return 1;
                case 'V': return 5;
                case 'X': return 10;
                case 'L': return 50;
                case 'C': return 100;
                case 'D': return 500;
                case 'M': return 1000;
                default: return 0;
        }
}
    public int romanToInt(String s) {
        //initialize a variable result
        int result = 0;

        for (int i=0;i<s.length();i++){

            //compare the two consecutive numeral's value.
            //if first one is less , subtract it from result
            // otherwise add it to the result
            
            if(i+1<s.length() && CharToNum(s.charAt(i)) < CharToNum(s.charAt(i+1))){
                result -=CharToNum(s.charAt(i));
            }
            else{
                result += CharToNum(s.charAt(i));
            }
        }
        return result;
    }
public static void main(String[] args) {
    Solution sol = new Solution();
    System.out.println(sol.RomanToInt("MCMIV"));
}

}
