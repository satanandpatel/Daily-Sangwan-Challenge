class Solution {
public:
    bool isValid(string s) {
        stack<char> st;

        for(int i=0;i<s.size();i++){

            if(s[i]=='(' || s[i]=='{' || s[i]=='['){  //opening brackets (pushing into stack)
                st.push(s[i]);
            }

            else{//closing brackets

                if(s.size()==0){
                    return false;
                }
                
                if (st.empty()) return false;

                if(  //check if top of stack match with next closing bracket.
                    (st.top()=='(' && s[i]==')') ||
                    (st.top()=='{' && s[i]=='}') ||
                    (st.top()=='[' && s[i]==']')){
                     st.pop();
                }
                else{ //no match
                    return false;
                }
            }
        }
    return st.empty();
    }
};
